<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<groupId>pe.mayciel.freechal</groupId>
	<artifactId>migration-module</artifactId>
	<version>0.0.1-SNAPSHOT</version>
	<packaging>war</packaging>
	<name>migration-module</name>
	<description>프리챌 마이그레이션 모듈</description>

	<!-- ==================================================== -->
	<!-- POM (Project Object Model) 설정 프로퍼티 -->
	<!-- ==================================================== -->
	<properties>
		<project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
		<project.reporting.outputEncoding>UTF-8</project.reporting.outputEncoding>
		<java-version>1.6</java-version>
		<org.springframework-version>3.1.1.RELEASE</org.springframework-version>
		<spring-security-version>3.1.0.RELEASE</spring-security-version>
		<jodatime.version>1.5.2</jodatime.version>
		<commons-dbcp-version>1.4</commons-dbcp-version>
		<org.slf4j-version>1.5.10</org.slf4j-version>
		<deploy-path>../deploy</deploy-path>
		<deploy.phase>local</deploy.phase>
	</properties>

	<!-- ==================================================== -->
	<!-- 실행 옵션 -->
	<!-- ==================================================== -->
	<profiles>
		<profile>
			<id>local</id>
			<properties>
				<deploy.phase>local</deploy.phase>
				<deploy-path>deploy</deploy-path>
				<log.level>DEBUG</log.level>
			</properties>
		</profile>
	</profiles>


	<!-- ==================================================== -->
	<!-- Build Infomation -->
	<!-- ==================================================== -->
	<build>
		<!-- 빌드시 링크할 리소스 -->
		<resources>
			<resource>
				<directory>src/main/resources</directory>
			</resource>
		</resources>
		<!-- Maven plug-in -->
		<plugins>
			<plugin>
				<artifactId>maven-eclipse-plugin</artifactId>
				<version>2.9</version>
				<configuration>
					<additionalProjectnatures>
						<projectnature>org.springframework.ide.eclipse.core.springnature</projectnature>
					</additionalProjectnatures>
					<additionalBuildcommands>
						<buildcommand>org.springframework.ide.eclipse.core.springbuilder</buildcommand>
					</additionalBuildcommands>
					<downloadSources>true</downloadSources>
					<downloadJavadocs>true</downloadJavadocs>
				</configuration>
			</plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-compiler-plugin</artifactId>
				<version>2.3.2</version>
				<configuration>
					<encoding>UTF-8</encoding>
					<source>1.6</source>
					<target>1.6</target>
					<compilerArgument>-Xlint:all</compilerArgument>
					<showWarnings>true</showWarnings>
					<showDeprecation>true</showDeprecation>
				</configuration>
			</plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-war-plugin</artifactId>
				<configuration>
					<webappDirectory>${deploy-path}</webappDirectory>
				</configuration>
			</plugin>
			<plugin>
				<groupId>org.codehaus.mojo</groupId>
				<artifactId>exec-maven-plugin</artifactId>
				<version>1.2.1</version>
				<configuration>
					<mainClass>org.test.int1.Main</mainClass>
				</configuration>
			</plugin>

			<!-- ######################################### -->
			<!-- Start QP Code : CheckStyle -->
			<!-- ######################################### -->
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-dependency-plugin</artifactId>
				<executions>
					<execution>
						<id>install</id>
						<phase>install</phase>
						<goals>
							<goal>sources</goal>
						</goals>
					</execution>
				</executions>
			</plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-resources-plugin</artifactId>
				<configuration>
					<encoding>${project.reporting.outputEncoding}</encoding>
				</configuration>
			</plugin>
			<!-- ######################################### -->
			<!-- End QP Code : CheckStyle -->
			<!-- ######################################### -->
		</plugins>
	</build>

	<!-- ==================================================== -->
	<!-- 라이브러리 저장소 -->
	<!-- ==================================================== -->
	<repositories>
		<repository>
			<id>spring-milestone</id>
			<name>Spring Maven MILESTONE Repository</name>
			<url>http://repo.springsource.org/libs-milestone</url>
		</repository>
		<repository>
			<id>search.maven.org</id>
			<url>http://search.maven.org</url>
			<snapshots>
				<enabled>false</enabled>
			</snapshots>
		</repository>
		<repository>
			<id>jboss-repository</id>
			<name>Jboss Repository for Maven 2</name>
			<url>http://repository.jboss.com/</url>
		</repository>
		<repository>
			<id>mvnsearch.org.repository</id>
			<name>Mvnsearch Repository for Maven 2</name>
			<url>http://www.mvnsearch.org/maven2/</url>
		</repository>
	</repositories>

	<!-- ==================================================== -->
	<!-- 라이브러리 정보 정의 -->
	<!-- ==================================================== -->
	<dependencies>
		<!-- Spring -->
		<dependency>
			<groupId>org.springframework</groupId>
			<artifactId>spring-context</artifactId>
			<version>${org.springframework-version}</version>
			<exclusions>
